package correct;

import correct.example;

sequencediagram allGrammarElements {

  // Interacting objects
  (c) o: Order;
  c: Customer;

  // Offer -> Production
  o -> c : trigger sendConfirmation()
  o <-- c : return
  o -> o : orderParts()
  //<o: [state == Production]>

  // Production -> Shipping
  //java: {produceAllItems()}
  o -> o : trigger shipItems()
  //<o : [state == Shipping]>

  // Shipping -> Payment
  //java: {sendAllItems()}
  o -> c : sendInvoice(sum)
  o <-- c : return
  //<o: [state == payment]>

  // Payment -> Complete
  //java: {pay()}
  //<o: [state == complete]>
  o -> (m : Mail) : new Mail()

}
