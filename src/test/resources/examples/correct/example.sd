package correct;

import cdAuftrag.cd;

sequencediagram sdAuftrag {

	// Interacting objects
	o: Order;
	c: Customer;
	
	// Offer -> Production
	o -> c : <<trigger>> sendConfirmation();
	o <-- c : return;
	o -> o : orderParts();
	<"assert state == Production">
	
	// Production -> Shipping
	{"JAVA: Make sure that allItemsProduced() is true"}
	o -> o : <<trigger>> shipItems();
	<"assert state == Shipping">
	
	// Shipping -> Payment
	{"JAVA :  Make sure that allItemsSent() is true"}
	o -> c : sendInvoice(sum);
	o <-- c : return;
	<"assert state == payment">
	
	// Payment -> Complete
	{"Java:  Make sure that paid is true"}
	<"assert state == complete">
	
}