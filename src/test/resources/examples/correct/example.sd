package examples.correct;

import examples.correct.activities.sd;

sequencediagram example {

	// Interacting objects
	o: Order;
	c: Customer;
	
	// Offer -> Production
	o -> c : <<trigger>> sendConfirmation();
	o <-- c : return;
	o -> o : orderParts();
	<[state == Production]>
	
	// Production -> Shipping
	java: {produceAllItems();}
	o -> o : <<trigger>> shipItems();
	<[state == Shipping]>
	
	// Shipping -> Payment
	java: {sendAllItems();}
	o -> c : sendInvoice(sum);
	o <-- c : return;
	<[state == payment]>
	
	// Payment -> Complete
	java: {pay();}
	<[state == complete]>
	
}